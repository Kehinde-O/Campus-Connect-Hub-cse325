@page "/register"
@using System.ComponentModel.DataAnnotations
@inject IAuthService Auth
@inject NavigationManager Nav
@inject IJSRuntime JS


<div class="registration">
<h3>Register</h3>

<EditForm Model="model" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-row">
        <label for="username">Username</label><br>
        <InputText id="username" @bind-Value="model.UserName" />
        <ValidationMessage For="@(() => model.UserName)" />
    </div>

    <div class="form-row">
        <label for="password">Password</label><br>
        <InputText id="password" type="password" @bind-Value="model.Password" />
        <ValidationMessage For="@(() => model.Password)" />
    </div>

    <div class="form-row">
        <label for="confirm">Confirm Password</label><br>
        <InputText id="confirm" type="password" @bind-Value="model.ConfirmPassword" />
        <ValidationMessage For="@(() => model.ConfirmPassword)" />
    </div>

    <div class="form-actions">
        <button type="submit" class="register">Register</button>
        <button type="button" class="cancel" @onclick="Cancel">Cancel</button>
    </div>
</EditForm>
</div>

@code {
    private RegisterModel model = new RegisterModel();

    private async Task HandleValidSubmit()
    {
        // Basic client-side validation already ensured by EditForm + DataAnnotations.
        var success = await Auth.RegisterAsync(model.UserName.Trim(), model.Password);
        if (success)
        {
            // registration succeeded — go to bulletins
            Nav.NavigateTo("/bulletins");
        }
        else
        {
            // registration failed (user exists, etc.)
            await JS.InvokeVoidAsync("alert", "Registration failed — username may already exist.");
        }
    }

    private void Cancel() => Nav.NavigateTo("/");

    // Simple view-model with validation attributes
    public class RegisterModel
    {
        [Required(ErrorMessage = "Username is required")]
        [MinLength(3, ErrorMessage = "Username must be at least 3 characters")]
        public string UserName { get; set; } = string.Empty;

        [Required(ErrorMessage = "Password is required")]
        [MinLength(6, ErrorMessage = "Password must be at least 6 characters")]
        public string Password { get; set; } = string.Empty;

        [Required(ErrorMessage = "Please confirm your password")]
        [Compare("Password", ErrorMessage = "Passwords do not match")]
        public string ConfirmPassword { get; set; } = string.Empty;
    }
}
