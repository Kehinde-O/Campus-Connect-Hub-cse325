@using CampusConnectHub.Client.Services
@using CampusConnectHub.Shared.DTOs
@using System
@inject ApiService ApiService
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject NotificationService NotificationService
@inject IJSRuntime JSRuntime

<div class="user-management-container">
    <div class="management-header">
        <div class="search-filters">
            <input type="text" @bind="searchText" @bind:event="oninput" @onkeypress="HandleKeyPress" 
                   class="search-input" placeholder="Search users..." />
            <select @bind="roleFilter" @bind:event="onchange" class="filter-select">
                <option value="">All Roles</option>
                <option value="Student">Student</option>
                <option value="Administrator">Administrator</option>
            </select>
            <button class="btn-search" @onclick="() => LoadUsers()" type="button">Search</button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="loading-spinner-large"></div>
            <p class="loading-text">Loading users...</p>
        </div>
    }
    else if (users.Items.Any())
    {
        <div class="users-table">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Activity</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in users.Items)
                    {
                        <tr>
                            <td>@user.FirstName @user.LastName</td>
                            <td>@user.Email</td>
                            <td>
                                <span class="role-badge @(user.Role == "Administrator" ? "role-admin" : "role-student")">
                                    @user.Role
                                </span>
                            </td>
                            <td>
                                <div class="activity-stats">
                                    <span title="News Posts"><i class="bi bi-newspaper me-1"></i>@user.NewsPostsCount</span>
                                    <span title="Events Created"><i class="bi bi-calendar-event me-1"></i>@user.EventsCreatedCount</span>
                                    <span title="RSVPs"><i class="bi bi-check-circle me-1"></i>@user.RSVPsCount</span>
                                </div>
                            </td>
                            <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn-action btn-role" @onclick="() => ShowRoleModal(user)" title="Change Role">
                                        Role
                                    </button>
                                    <button class="btn-action btn-delete" @onclick="() => DeleteUser(user.Id)" title="Delete">
                                        Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (users.TotalPages > 1)
        {
            <div class="pagination">
                <button class="btn-pagination" disabled="@(users.PageNumber == 1)" 
                        @onclick="() => LoadUsers(users.PageNumber - 1)">
                    ← Previous
                </button>
                <div class="pagination-info">
                    Page @users.PageNumber of @users.TotalPages (@users.TotalCount total)
                </div>
                <button class="btn-pagination" disabled="@(users.PageNumber >= users.TotalPages)" 
                        @onclick="() => LoadUsers(users.PageNumber + 1)">
                    Next →
                </button>
            </div>
        }
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon"><i class="bi bi-people display-1 text-tertiary"></i></div>
            <p>No users found</p>
        </div>
    }
</div>

@if (showRoleModal && selectedUser != null)
{
    <Modal IsVisible="true" Title="Change User Role" OnClose="CloseRoleModal">
        <div class="role-modal-content">
            <p>Change role for <strong>@selectedUser.FirstName @selectedUser.LastName</strong> (@selectedUser.Email)</p>
            <select @bind="newRole" class="role-select">
                <option value="Student">Student</option>
                <option value="Administrator">Administrator</option>
            </select>
            <div class="modal-footer">
                <button class="btn-secondary" @onclick="CloseRoleModal">Cancel</button>
                <button class="btn-primary" @onclick="UpdateRole" disabled="@isUpdating">
                    @if (isUpdating)
                    {
                        <span>Updating...</span>
                    }
                    else
                    {
                        <span>Update Role</span>
                    }
                </button>
            </div>
        </div>
    </Modal>
}

@code {
    private PagedResponse<UserDto> users = new();
    private bool isLoading = true;
    private string searchText = string.Empty;
    private string roleFilter = string.Empty;
    private bool showRoleModal = false;
    private UserDto? selectedUser = null;
    private string newRole = "Student";
    private bool isUpdating = false;

    protected override async Task OnInitializedAsync()
    {
        var isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (!isAuthenticated)
        {
            Navigation.NavigateTo($"/login?returnUrl={Uri.EscapeDataString(Navigation.Uri)}");
            return;
        }

        var user = await AuthService.GetUserAsync();
        if (user?.Role != "Administrator")
        {
            Navigation.NavigateTo("/");
            return;
        }

        await LoadUsers();
    }

    private async Task LoadUsers(int pageNumber = 1)
    {
        isLoading = true;
        try
        {
            users = await ApiService.GetUsersAsync(pageNumber, 20, 
                string.IsNullOrWhiteSpace(searchText) ? null : searchText,
                string.IsNullOrWhiteSpace(roleFilter) ? null : roleFilter);
        }
        catch (Exception ex)
        {
            users = new PagedResponse<UserDto>();
            if (!ex.Message.Contains("Unauthorized") && !ex.Message.Contains("401"))
            {
                NotificationService.ShowError("Failed to load users. Please try again.");
            }
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await LoadUsers();
        }
    }

    private void ShowRoleModal(UserDto user)
    {
        selectedUser = user;
        newRole = user.Role;
        showRoleModal = true;
    }

    private void CloseRoleModal()
    {
        showRoleModal = false;
        selectedUser = null;
    }

    private async Task UpdateRole()
    {
        if (selectedUser == null) return;

        isUpdating = true;
        try
        {
            var success = await ApiService.UpdateUserRoleAsync(selectedUser.Id, new UpdateUserRoleDto { Role = newRole });
            if (success)
            {
                NotificationService.ShowSuccess("User role updated successfully!");
                await LoadUsers(users.PageNumber);
                CloseRoleModal();
            }
            else
            {
                NotificationService.ShowError("Failed to update user role. Please try again.");
            }
        }
        catch
        {
            NotificationService.ShowError("An error occurred while updating user role.");
        }
        finally
        {
            isUpdating = false;
        }
    }

    private async Task DeleteUser(int id)
    {
        if (await ConfirmDelete())
        {
            try
            {
                var success = await ApiService.DeleteUserAsync(id);
                if (success)
                {
                    NotificationService.ShowSuccess("User deleted successfully!");
                    await LoadUsers(users.PageNumber);
                }
                else
                {
                    NotificationService.ShowError("Failed to delete user. Please try again.");
                }
            }
            catch
            {
                NotificationService.ShowError("An error occurred while deleting user.");
            }
        }
    }

    private async Task<bool> ConfirmDelete()
    {
        return await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this user? This action cannot be undone.");
    }
}

