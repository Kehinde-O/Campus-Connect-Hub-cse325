    }

    .card-icon {
        font-size: 2rem;
    }

    .card-title-section {
        flex: 1;
    }

    .card-title-section h4 {
        margin: 0 0 var(--spacing-xs) 0;
        color: var(--text-primary);
        font-size: var(--font-size-lg);
        font-weight: 700;
    }

    .card-meta {
        display: flex;
        flex-direction: column;
        gap: var(--spacing-xs);
    }

    .meta-item {
        color: var(--text-secondary-dark);
        font-size: var(--font-size-base);
        font-weight: 500;
    }

    .card-content {
        flex: 1;
    }

    .card-content p {
