        border-radius: var(--radius-lg);
        padding: var(--spacing-lg);
        box-shadow: var(--shadow-sm);
        border: 1px solid rgba(0, 0, 0, 0.05);
        transition: all var(--transition-base);
        display: flex;
        flex-direction: column;
        gap: var(--spacing-md);
    }

