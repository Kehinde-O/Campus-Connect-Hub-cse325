@using CampusConnectHub.Client.Services
@using CampusConnectHub.Shared.DTOs
@using System.ComponentModel.DataAnnotations
@inject ApiService ApiService
@inject NotificationService NotificationService
@inject IJSRuntime JSRuntime

<div class="management-list">
    @if (newsPosts.Items.Any())
    {
        <div class="management-grid">
            @foreach (var post in newsPosts.Items)
            {
                <div class="management-card">
                    <div class="card-header">
                        <div class="card-date-badge">
                            <span class="date-month">@post.CreatedAt.ToString("MMM")</span>
                            <span class="date-day">@post.CreatedAt.Day</span>
                        </div>
                        <div class="card-title-section">
                            <h4>@post.Title</h4>
                            <div class="card-meta">
                                <span class="meta-item">Author: @post.AuthorName</span>
                                <span class="meta-item">Date: @post.CreatedAt.ToString("MMM dd, yyyy")</span>
                                @if (!post.IsPublished)
                                {
                                    <span class="meta-item status-draft">Draft</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="card-content">
                        <p>@(post.Content.Length > 100 ? post.Content.Substring(0, 100) + "..." : post.Content)</p>
                    </div>
                    <div class="card-actions">
                        <button class="btn-action btn-edit" @onclick="() => EditPost(post)" title="Edit">
                            <span>Edit</span>
                        </button>
                        <button class="btn-action btn-delete" @onclick="() => DeletePost(post.Id)" title="Delete">
                            <span>Delete</span>
                        </button>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">News</div>
            <p>No news posts found</p>
        </div>
    }
</div>

<Modal IsVisible="showModal" Title="@(isEditing ? "Edit News Post" : "Create News Post")" OnClose="CloseModal">
    <EditForm Model="currentPost" OnValidSubmit="SavePost">
        <DataAnnotationsValidator />
        <div class="form-group">
            <label for="title">Title *</label>
            <InputText id="title" @bind-Value="currentPost.Title" class="form-control" />
            <ValidationMessage For="@(() => currentPost.Title)" />
        </div>
        <div class="form-group">
            <label for="content">Content *</label>
            <InputTextArea id="content" @bind-Value="currentPost.Content" class="form-control" rows="6" />
            <ValidationMessage For="@(() => currentPost.Content)" />
        </div>
        <div class="form-group">
            <label class="checkbox-label">
                <InputCheckbox @bind-Value="currentPost.IsPublished" />
                <span>Published</span>
            </label>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn-secondary" @onclick="CloseModal">Cancel</button>
            <button type="submit" class="btn-primary" disabled="@isSaving">
                @if (isSaving)
                {
                    <span>Saving...</span>
                }
                else
                {
                    <span>@(isEditing ? "Update" : "Create")</span>
                }
            </button>
        </div>
    </EditForm>
</Modal>

@code {
    private PagedResponse<NewsPostDto> newsPosts = new();
    private bool showModal = false;
    private bool isEditing = false;
    private bool isSaving = false;
    private CreateNewsPostDto currentPost = new();
    private int? editingPostId = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadNews();
    }

    private async Task LoadNews()
    {
        newsPosts = await ApiService.GetNewsAsync(1, 50);
    }

    private void EditPost(NewsPostDto post)
    {
        isEditing = true;
        editingPostId = post.Id;
        currentPost = new CreateNewsPostDto
        {
            Title = post.Title,
            Content = post.Content,
            IsPublished = post.IsPublished
        };
        showModal = true;
    }

    private void CreateNewPost()
    {
        isEditing = false;
        editingPostId = null;
        currentPost = new CreateNewsPostDto { IsPublished = true };
        showModal = true;
    }

    private async Task SavePost()
    {
        isSaving = true;
        try
        {
            bool success;
            if (isEditing && editingPostId.HasValue)
            {
                success = await ApiService.UpdateNewsPostAsync(editingPostId.Value, currentPost);
            }
            else
            {
                success = await ApiService.CreateNewsPostAsync(currentPost);
            }

            if (success)
            {
                NotificationService.ShowSuccess(isEditing ? "News post updated successfully!" : "News post created successfully!");
                await LoadNews();
                CloseModal();
            }
            else
            {
                NotificationService.ShowError("Failed to save news post. Please try again.");
            }
        }
        finally
        {
            isSaving = false;
        }
    }

    private void CloseModal()
    {
        showModal = false;
        isEditing = false;
        editingPostId = null;
        currentPost = new CreateNewsPostDto();
    }

    private async Task DeletePost(int id)
    {
        if (await ConfirmDelete())
        {
            var success = await ApiService.DeleteNewsPostAsync(id);
            if (success)
            {
                NotificationService.ShowSuccess("News post deleted successfully!");
                await LoadNews();
            }
            else
            {
                NotificationService.ShowError("Failed to delete news post. Please try again.");
            }
        }
    }

    private async Task<bool> ConfirmDelete()
    {
        // Simple confirmation - in production, use a proper confirmation dialog
        return await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this news post?");
    }

    public void OpenCreateModal()
    {
        CreateNewPost();
    }
}

