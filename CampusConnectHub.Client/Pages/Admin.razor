@page "/admin"
@using CampusConnectHub.Client.Services
@using CampusConnectHub.Client.Components
@using CampusConnectHub.Shared.DTOs
@inject ApiService ApiService
@inject AuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Admin Dashboard - Campus Connect Hub</PageTitle>

<div class="content-header text-center mb-4">
    <h1 class="display-4 fw-bold text-primary">Admin Dashboard</h1>
    <p class="lead text-secondary">Manage campus content and users</p>
</div>

<div class="container-fluid pb-5">
    @if (!isAdmin)
    {
        <div class="card shadow-sm text-center py-5">
            <div class="card-body">
                <i class="bi bi-shield-lock-fill display-4 text-danger mb-3"></i>
                <h2 class="h4 text-primary mb-3">Access Denied</h2>
                <p class="text-secondary mb-4">You do not have permission to access the admin area.</p>
                <a href="/" class="btn btn-primary">Return Home</a>
            </div>
        </div>
    }
    else if (isLoading)
    {
        <div class="d-flex flex-column align-items-center justify-content-center py-5">
            <div class="loading-spinner mb-3"></div>
            <p class="text-secondary">Loading dashboard...</p>
        </div>
    }
    else
    {
        <!-- Stats Row -->
        <div class="row g-4 mb-5">
            <div class="col-md-6 col-lg-4 col-xl-2">
                <div class="card shadow-sm h-100 border-0 bg-primary bg-opacity-10">
                    <div class="card-body text-center py-4">
                        <i class="bi bi-newspaper display-6 text-primary mb-2"></i>
                        <h3 class="display-6 fw-bold text-primary mb-0">@(dashboard?.TotalNewsPosts ?? 0)</h3>
                        <p class="small fw-bold text-secondary text-uppercase mb-0">Total News</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 col-xl-2">
                <div class="card shadow-sm h-100 border-0 bg-success bg-opacity-10">
                    <div class="card-body text-center py-4">
                        <i class="bi bi-check-circle display-6 text-success mb-2"></i>
                        <h3 class="display-6 fw-bold text-success mb-0">@(dashboard?.PublishedNewsPosts ?? 0)</h3>
                        <p class="small fw-bold text-secondary text-uppercase mb-0">Published</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 col-xl-2">
                <div class="card shadow-sm h-100 border-0 bg-info bg-opacity-10">
                    <div class="card-body text-center py-4">
                        <i class="bi bi-calendar-event display-6 text-info mb-2"></i>
                        <h3 class="display-6 fw-bold text-info mb-0">@(dashboard?.TotalEvents ?? 0)</h3>
                        <p class="small fw-bold text-secondary text-uppercase mb-0">Total Events</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 col-xl-2">
                <div class="card shadow-sm h-100 border-0 bg-warning bg-opacity-10">
                    <div class="card-body text-center py-4">
                        <i class="bi bi-clock-history display-6 text-warning mb-2"></i>
                        <h3 class="display-6 fw-bold text-warning mb-0">@(dashboard?.UpcomingEvents ?? 0)</h3>
                        <p class="small fw-bold text-secondary text-uppercase mb-0">Upcoming</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 col-xl-2">
                <div class="card shadow-sm h-100 border-0 bg-secondary bg-opacity-10">
                    <div class="card-body text-center py-4">
                        <i class="bi bi-people display-6 text-secondary mb-2"></i>
                        <h3 class="display-6 fw-bold text-secondary mb-0">@(dashboard?.TotalRSVPs ?? 0)</h3>
                        <p class="small fw-bold text-secondary text-uppercase mb-0">Total RSVPs</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 col-xl-2">
                <div class="card shadow-sm h-100 border-0 bg-dark bg-opacity-10">
                    <div class="card-body text-center py-4">
                        <i class="bi bi-person-badge display-6 text-dark mb-2"></i>
                        <h3 class="display-6 fw-bold text-dark mb-0">@(dashboard?.TotalUsers ?? 0)</h3>
                        <p class="small fw-bold text-secondary text-uppercase mb-0">Total Users</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Management Sections -->
        <div class="d-grid gap-5">
            <!-- News Management -->
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <h2 class="h5 text-primary mb-0 d-flex align-items-center gap-2">
                        <i class="bi bi-newspaper"></i> News Management
                    </h2>
                    <button class="btn btn-primary btn-sm" @onclick="() => newsManagementRef?.OpenCreateModal()">
                        <i class="bi bi-plus-lg me-1"></i> Create News Post
                    </button>
                </div>
                <div class="card-body p-0">
                    <NewsManagement @ref="newsManagementRef" />
                </div>
            </div>

            <!-- Event Management -->
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <h2 class="h5 text-primary mb-0 d-flex align-items-center gap-2">
                        <i class="bi bi-calendar-event"></i> Event Management
                    </h2>
                    <button class="btn btn-primary btn-sm" @onclick="() => eventManagementRef?.OpenCreateModal()">
                        <i class="bi bi-plus-lg me-1"></i> Create Event
                    </button>
                </div>
                <div class="card-body p-0">
                    <EventManagement @ref="eventManagementRef" />
                </div>
            </div>

            <!-- Resource Management -->
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <h2 class="h5 text-primary mb-0 d-flex align-items-center gap-2">
                        <i class="bi bi-collection"></i> Resource Management
                    </h2>
                    <button class="btn btn-primary btn-sm" @onclick="() => resourceManagementRef?.OpenCreateModal()">
                        <i class="bi bi-plus-lg me-1"></i> Create Resource
                    </button>
                </div>
                <div class="card-body p-0">
                    <ResourceManagement @ref="resourceManagementRef" />
                </div>
            </div>

            <!-- User Management -->
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h2 class="h5 text-primary mb-0 d-flex align-items-center gap-2">
                        <i class="bi bi-people-fill"></i> User Management
                    </h2>
                </div>
                <div class="card-body p-0">
                    <UserManagement />
                </div>
            </div>

            <!-- Analytics Dashboard -->
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h2 class="h5 text-primary mb-0 d-flex align-items-center gap-2">
                        <i class="bi bi-graph-up"></i> Analytics Dashboard
                    </h2>
                </div>
                <div class="card-body">
                    <AnalyticsDashboard />
                </div>
            </div>
        </div>
    }
</div>

@code {
    private AdminDashboardDto? dashboard;
    private bool isLoading = true;
    private bool isAdmin = false;
    private NewsManagement? newsManagementRef;
    private EventManagement? eventManagementRef;
    private ResourceManagement? resourceManagementRef;

    protected override async Task OnInitializedAsync()
    {
        var user = await AuthService.GetUserAsync();
        isAdmin = user?.Role == "Administrator";

        if (!isAdmin)
        {
            isLoading = false;
            return;
        }

        await LoadDashboard();
    }

    private async Task LoadDashboard()
    {
        isLoading = true;
        try
        {
            dashboard = await ApiService.GetAdminDashboardAsync();
        }
        catch
        {
            dashboard = null;
        }
        finally
        {
            isLoading = false;
        }
    }
}


