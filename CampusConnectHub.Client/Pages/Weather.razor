@page "/weather"
@inject HttpClient Http

<PageTitle>Weather - Campus Connect Hub</PageTitle>

<div class="weather-container">
    <div class="weather-header">
        <h1>Weather Forecast</h1>
        <p class="subtitle">7-day weather forecast for campus area</p>
    </div>

    @if (forecasts == null)
    {
        <div class="loading-container">
            <div class="loading-spinner-large"></div>
            <p class="loading-text">Loading weather data...</p>
        </div>
    }
    else
    {
        <div class="weather-grid">
            @foreach (var forecast in forecasts)
            {
                <div class="weather-card">
                    <div class="weather-date">
                        <div class="date-day">@forecast.Date.DayOfWeek.ToString().Substring(0, 3)</div>
                        <div class="date-number">@forecast.Date.Day</div>
                        <div class="date-month">@forecast.Date.ToString("MMM")</div>
                    </div>
                    <div class="weather-icon-text">@GetWeatherIcon(forecast.Summary)</div>
                    <div class="weather-temp">
                        <div class="temp-celsius">@forecast.TemperatureC°C</div>
                        <div class="temp-fahrenheit">@forecast.TemperatureF°F</div>
                    </div>
                    <div class="weather-summary">@forecast.Summary</div>
                </div>
            }
        </div>
    }
</div>

@code {
    private WeatherForecast[]? forecasts;

    protected override async Task OnInitializedAsync()
    {
        forecasts = await Http.GetFromJsonAsync<WeatherForecast[]>("sample-data/weather.json");
    }

    private string GetWeatherIcon(string? summary)
    {
        if (string.IsNullOrEmpty(summary))
            return "Sunny";

        return summary.ToLower() switch
        {
            var s when s.Contains("sunny") || s.Contains("clear") => "Sunny",
            var s when s.Contains("cloud") => "Cloudy",
            var s when s.Contains("rain") => "Rainy",
            var s when s.Contains("snow") => "Snowy",
            var s when s.Contains("wind") => "Windy",
            var s when s.Contains("fog") || s.Contains("mist") => "Foggy",
            var s when s.Contains("storm") || s.Contains("thunder") => "Stormy",
            _ => "Partly Cloudy"
        };
    }

    public class WeatherForecast
    {
        public DateOnly Date { get; set; }

        public int TemperatureC { get; set; }

        public string? Summary { get; set; }

        public int TemperatureF => 32 + (int)(TemperatureC / 0.5556);
    }
}

<style>
    .weather-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: var(--spacing-xl);
    }

    .weather-header {
        text-align: center;
        margin-bottom: var(--spacing-2xl);
    }

    .weather-header h1 {
        font-size: var(--font-size-4xl);
        background: linear-gradient(135deg, var(--primary-gradient-start) 0%, var(--primary-gradient-end) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: var(--spacing-sm);
        font-weight: 800;
        letter-spacing: -0.02em;
    }

    .subtitle {
        color: rgba(255, 255, 255, 0.9);
        font-size: var(--font-size-lg);
        font-weight: 400;
    }

    .weather-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: var(--spacing-lg);
    }

    .weather-card {
        background: var(--bg-glass);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-radius: var(--radius-xl);
        padding: var(--spacing-xl);
        box-shadow: var(--shadow-md);
        border: 1px solid rgba(255, 255, 255, 0.2);
        text-align: center;
        transition: all var(--transition-base);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--spacing-md);
    }

    .weather-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-lg);
    }

    .weather-date {
        width: 100%;
        padding-bottom: var(--spacing-md);
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .date-day {
        font-size: var(--font-size-sm);
        font-weight: 700;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: var(--spacing-xs);
    }

    .date-number {
        font-size: var(--font-size-2xl);
        font-weight: 800;
        color: var(--text-primary);
        line-height: 1;
        margin-bottom: var(--spacing-xs);
    }

    .date-month {
        font-size: var(--font-size-sm);
        font-weight: 600;
        color: var(--text-secondary);
        text-transform: uppercase;
    }

    .weather-icon-text {
        font-size: var(--font-size-lg);
        font-weight: 700;
        color: var(--text-primary);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding: var(--spacing-sm) var(--spacing-md);
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
        border-radius: var(--radius-md);
        line-height: 1;
    }

    .weather-temp {
        display: flex;
        flex-direction: column;
        gap: var(--spacing-xs);
    }

    .temp-celsius {
        font-size: var(--font-size-2xl);
        font-weight: 800;
        color: var(--text-primary);
        line-height: 1;
    }

    .temp-fahrenheit {
        font-size: var(--font-size-base);
        font-weight: 600;
        color: var(--text-secondary);
    }

    .weather-summary {
        font-size: var(--font-size-sm);
        color: var(--text-secondary);
        font-weight: 500;
        text-transform: capitalize;
    }

    .loading-container {
        text-align: center;
        padding: var(--spacing-2xl);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--spacing-md);
    }

    .loading-spinner-large {
        width: 60px;
        height: 60px;
        border: 4px solid rgba(255, 255, 255, 0.2);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }

    .loading-text {
        color: rgba(255, 255, 255, 0.9);
        font-size: var(--font-size-lg);
        font-weight: 500;
    }

    @@media (max-width: 768px) {
        .weather-container {
            padding: var(--spacing-md);
        }

        .weather-grid {
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: var(--spacing-md);
        }

        .weather-header h1 {
            font-size: var(--font-size-3xl);
        }
    }
</style>
