@page "/events"
@using CampusConnectHub.Client.Services
@using CampusConnectHub.Shared.DTOs
@inject ApiService ApiService
@inject AuthService AuthService

<PageTitle>Events - Campus Connect Hub</PageTitle>

<div class="content-header text-center mb-4">
    <h1 class="display-4 fw-bold text-primary">Upcoming Events</h1>
    <p class="lead text-secondary">Discover and RSVP to campus events</p>
</div>

<div class="container-fluid events-container">
    <div class="search-section mb-4">
        <SearchBar Placeholder="Search events..." 
                   ShowFilters="true" 
                   FilterType="events"
                   OnFilter="HandleFilter" 
                   OnClear="HandleClearFilter" />
    </div>

    @if (isLoading)
    {
        <div class="d-flex flex-column align-items-center justify-content-center py-5">
            <div class="loading-spinner mb-3"></div>
            <p class="text-secondary">Loading events...</p>
        </div>
    }
    else if (events.Any())
    {
        <div class="dashboard-grid">
            @foreach (var eventItem in events)
            {
                <div class="card event-card h-100">
                    <div class="card-body">
                        <div class="d-flex gap-3 mb-3">
                            <div class="date-badge">
                                <span class="month">@eventItem.EventDate.ToString("MMM")</span>
                                <span class="day">@eventItem.EventDate.Day</span>
                            </div>
                            <div class="flex-grow-1">
                                <h3 class="card-title h5 text-primary mb-1">@eventItem.Title</h3>
                                <div class="text-secondary small">
                                    <i class="bi bi-geo-alt-fill me-1 text-tertiary"></i> @eventItem.Location
                                </div>
                            </div>
                        </div>

                        <div class="event-details mb-3">
                            <div class="d-flex align-items-center gap-2 mb-2 text-secondary small">
                                <i class="bi bi-clock text-tertiary"></i>
                                <span>@eventItem.EventDate.ToString("h:mm tt")</span>
                            </div>
                            <p class="card-text text-secondary mb-0 line-clamp-3">@eventItem.Description</p>
                        </div>

                        <div class="d-flex justify-content-between align-items-center pt-3 border-top mt-auto">
                            <div class="attendees-info small">
                                <i class="bi bi-people-fill text-tertiary me-1"></i>
                                <span class="fw-bold text-primary">@eventItem.CurrentAttendees</span>
                                @if (eventItem.MaxAttendees.HasValue)
                                {
                                    <span class="text-muted">/@eventItem.MaxAttendees</span>
                                }
                                <span class="text-muted ms-1">attending</span>
                            </div>

                            @if (isAuthenticated)
                            {
                                @if (eventItem.IsUserRSVPed)
                                {
                                    <button class="btn btn-outline-danger btn-sm" @onclick="() => CancelRSVP(eventItem.Id)">
                                        Cancel RSVP
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-primary btn-sm" @onclick="() => RSVPToEvent(eventItem.Id)" 
                                            disabled="@(eventItem.MaxAttendees.HasValue && eventItem.CurrentAttendees >= eventItem.MaxAttendees.Value)">
                                        @if (eventItem.MaxAttendees.HasValue && eventItem.CurrentAttendees >= eventItem.MaxAttendees.Value)
                                        {
                                            <span>Full</span>
                                        }
                                        else
                                        {
                                            <span>RSVP Now</span>
                                        }
                                    </button>
                                }
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state text-center py-5">
            <div class="empty-icon mb-3">
                <i class="bi bi-calendar-x display-1 text-tertiary"></i>
            </div>
            <h3 class="text-primary mb-2">No upcoming events</h3>
            <p class="text-secondary">Check back later for exciting campus events!</p>
        </div>
    }
</div>

@code {
    private List<EventDto> events = new();
    private bool isLoading = true;
    private bool isAuthenticated = false;
    private string? currentSearch = null;
    private string? currentLocation = null;
    private DateTime? currentStartDate = null;
    private DateTime? currentEndDate = null;

    protected override async Task OnInitializedAsync()
    {
        isAuthenticated = await AuthService.IsAuthenticatedAsync();
        await LoadEvents();
    }

    private async Task LoadEvents()
    {
        isLoading = true;
        try
        {
            events = await ApiService.GetEventsAsync(true, currentSearch, currentLocation, currentStartDate, currentEndDate);
        }
        catch
        {
            events = new List<EventDto>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleFilter((string? search, string? location, DateTime? startDate, DateTime? endDate) filters)
    {
        currentSearch = filters.search;
        currentLocation = filters.location;
        currentStartDate = filters.startDate;
        currentEndDate = filters.endDate;
        await LoadEvents();
    }

    private async Task HandleClearFilter()
    {
        currentSearch = null;
        currentLocation = null;
        currentStartDate = null;
        currentEndDate = null;
        await LoadEvents();
    }

    private async Task RSVPToEvent(int eventId)
    {
        try
        {
            var success = await ApiService.RSVPToEventAsync(eventId);
            if (success)
            {
                await LoadEvents();
            }
        }
        catch
        {
            // Handle error
        }
    }

    private async Task CancelRSVP(int eventId)
    {
        try
        {
            var success = await ApiService.CancelRSVPAsync(eventId);
            if (success)
            {
                await LoadEvents();
            }
        }
        catch
        {
            // Handle error
        }
    }
}

<style>
    .events-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .event-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border: 1px solid rgba(0,0,0,0.05);
    }

    .event-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-lg);
    }

    .date-badge {
        text-align: center;
        background-color: var(--bg-secondary);
        padding: 0.5rem 0.75rem;
        border-radius: var(--radius-md);
        min-width: 60px;
        height: fit-content;
        border: 1px solid #e2e8f0;
    }

    .date-badge .month {
        display: block;
        font-size: 0.75rem;
        text-transform: uppercase;
        font-weight: 700;
        color: var(--secondary-color);
        line-height: 1;
        margin-bottom: 2px;
    }

    .date-badge .day {
        display: block;
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text-primary);
        line-height: 1;
    }

    .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .text-tertiary {
        color: var(--text-tertiary);
    }
</style>


