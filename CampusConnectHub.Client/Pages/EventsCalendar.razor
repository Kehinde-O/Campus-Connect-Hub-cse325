@page "/events/calendar"
@using CampusConnectHub.Client.Services
@using CampusConnectHub.Shared.DTOs
@inject ApiService ApiService
@inject AuthService AuthService

<PageTitle>Events Calendar - Campus Connect Hub</PageTitle>

<div class="content-header text-center mb-4">
    <h1 class="display-4 fw-bold text-primary">Events Calendar</h1>
    <p class="lead text-secondary">View all events in a calendar format</p>
</div>

<div class="calendar-container container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <button class="btn btn-secondary" @onclick="PreviousMonth">
            <i class="bi bi-chevron-left"></i> Previous
        </button>
        <h2 class="h3 fw-bold text-primary mb-0">@currentMonth.ToString("MMMM yyyy")</h2>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary" @onclick="GoToToday">Today</button>
            <button class="btn btn-secondary" @onclick="NextMonth">
                Next <i class="bi bi-chevron-right"></i>
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex flex-column align-items-center justify-content-center py-5">
            <div class="loading-spinner mb-3"></div>
            <p class="text-secondary">Loading events...</p>
        </div>
    }
    else
    {
        <div class="calendar-card card shadow-sm">
            <div class="card-body p-0">
                <div class="calendar-header-row bg-light border-bottom">
                    @foreach (var day in dayNames)
                    {
                        <div class="calendar-day-header py-2 text-center text-uppercase fw-bold text-secondary small">@day</div>
                    }
                </div>
                <div class="calendar-grid">
                    @for (int i = 0; i < firstDayOfMonth; i++)
                    {
                        <div class="calendar-day empty bg-light"></div>
                    }
                    @for (int day = 1; day <= daysInMonth; day++)
                    {
                        var date = new DateTime(currentMonth.Year, currentMonth.Month, day);
                        var dayEvents = events.Where(e => e.EventDate.Date == date.Date).ToList();
                        var isToday = date.Date == DateTime.Today;
                        var isPast = date.Date < DateTime.Today;

                        <div class="calendar-day @(isToday ? "today" : "") @(isPast ? "past" : "") p-2">
                            <div class="day-number @(isToday ? "fw-bold text-primary" : "text-secondary") mb-1">
                                @day @if(isToday){ <span class="badge bg-primary ms-1" style="font-size: 0.6rem;">TODAY</span> }
                            </div>
                            <div class="day-events">
                                @foreach (var eventItem in dayEvents.Take(3))
                                {
                                    <div class="event-dot badge bg-primary text-start w-100 fw-normal mb-1 text-truncate" 
                                         style="cursor: pointer;" 
                                         title="@eventItem.Title" 
                                         @onclick="() => ShowEventDetails(eventItem)">
                                        @eventItem.Title
                                    </div>
                                }
                                @if (dayEvents.Count > 3)
                                {
                                    <div class="event-more text-muted small text-center">+@(dayEvents.Count - 3) more</div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

@if (selectedEvent != null)
{
    <Modal IsVisible="true" Title="Event Details" OnClose="CloseEventDetails">
        <div class="event-details-content">
            <h3 class="h4 text-primary mb-3">@selectedEvent.Title</h3>
            
            <div class="d-flex align-items-center gap-2 mb-2 text-secondary">
                <i class="bi bi-calendar-event text-tertiary"></i>
                <span>@selectedEvent.EventDate.ToString("MMMM dd, yyyy 'at' h:mm tt")</span>
            </div>
            
            <div class="d-flex align-items-center gap-2 mb-3 text-secondary">
                <i class="bi bi-geo-alt text-tertiary"></i>
                <span>@selectedEvent.Location</span>
            </div>
            
            <hr />
            
            <div class="mb-3">
                <label class="fw-bold text-secondary small text-uppercase mb-1">Description</label>
                <p class="text-body">@selectedEvent.Description</p>
            </div>
            
            <div class="mb-4">
                <label class="fw-bold text-secondary small text-uppercase mb-1">Attendees</label>
                <div class="d-flex align-items-center gap-2">
                    <i class="bi bi-people-fill text-muted"></i>
                    <span class="fw-bold">@selectedEvent.CurrentAttendees</span>
                    @if (selectedEvent.MaxAttendees.HasValue)
                    {
                        <span class="text-muted">/ @selectedEvent.MaxAttendees</span>
                    }
                </div>
            </div>

            <div class="modal-footer px-0 pb-0 border-0">
                <button class="btn btn-secondary" @onclick="CloseEventDetails">Close</button>
                @if (isAuthenticated && !selectedEvent.IsUserRSVPed && selectedEvent.EventDate >= DateTime.UtcNow)
                {
                    <button class="btn btn-primary" @onclick="() => RSVPToEvent(selectedEvent.Id)">
                        RSVP Now
                    </button>
                }
            </div>
        </div>
    </Modal>
}

@code {
    private List<EventDto> events = new();
    private bool isLoading = true;
    private bool isAuthenticated = false;
    private DateTime currentMonth = DateTime.Now;
    private EventDto? selectedEvent = null;
    private readonly string[] dayNames = { "Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat" };

    private int firstDayOfMonth => (int)new DateTime(currentMonth.Year, currentMonth.Month, 1).DayOfWeek;
    private int daysInMonth => DateTime.DaysInMonth(currentMonth.Year, currentMonth.Month);

    protected override async Task OnInitializedAsync()
    {
        isAuthenticated = await AuthService.IsAuthenticatedAsync();
        await LoadEvents();
    }

    private async Task LoadEvents()
    {
        isLoading = true;
        try
        {
            events = await ApiService.GetEventsAsync(false);
        }
        catch
        {
            events = new List<EventDto>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void PreviousMonth()
    {
        currentMonth = currentMonth.AddMonths(-1);
    }

    private void NextMonth()
    {
        currentMonth = currentMonth.AddMonths(1);
    }

    private void GoToToday()
    {
        currentMonth = DateTime.Now;
    }

    private void ShowEventDetails(EventDto eventItem)
    {
        selectedEvent = eventItem;
    }

    private void CloseEventDetails()
    {
        selectedEvent = null;
    }

    private async Task RSVPToEvent(int eventId)
    {
        var success = await ApiService.RSVPToEventAsync(eventId);
        if (success)
        {
            await LoadEvents();
            if (selectedEvent != null)
            {
                var updatedEvent = events.FirstOrDefault(e => e.Id == selectedEvent.Id);
                if (updatedEvent != null)
                {
                    selectedEvent = updatedEvent;
                }
            }
        }
    }
}

<style>
    .calendar-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .calendar-card {
        border-radius: var(--radius-lg);
        overflow: hidden;
    }

    .calendar-header-row {
        display: grid;
        grid-template-columns: repeat(7, 1fr);
    }

    .calendar-grid {
        display: grid;
        grid-template-columns: repeat(7, 1fr);
        border-left: 1px solid rgba(0,0,0,0.05); /* Close left border */
    }

    .calendar-day {
        min-height: 120px;
        background: white;
        border-right: 1px solid rgba(0,0,0,0.05);
        border-bottom: 1px solid rgba(0,0,0,0.05);
        transition: background-color 0.2s ease;
    }

    .calendar-day.empty {
        background-color: #f8f9fa;
    }
    
    .calendar-day.today {
        background-color: rgba(49, 151, 149, 0.05); /* Tinted with secondary color */
    }

    .calendar-day.past {
        background-color: #fcfcfc;
    }
    
    .calendar-day:hover:not(.empty) {
        background-color: #f1f5f9;
    }

    .text-tertiary {
        color: var(--text-tertiary);
    }
    
    .event-dot {
        font-size: 0.75rem;
    }
    
    @@media (max-width: 768px) {
        .calendar-day {
            min-height: 80px;
            font-size: 0.8rem;
        }
        
        .event-dot {
            font-size: 0.65rem;
            padding: 2px 4px;
        }
    }
</style>


