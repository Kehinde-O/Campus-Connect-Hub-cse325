@page "/"
@using CampusConnectHub.Client.Services
@using CampusConnectHub.Shared.DTOs
@inject ApiService ApiService
@inject AuthService AuthService

<PageTitle>Campus Connect Hub - News Feed</PageTitle>

<div class="news-container">
    <div class="header-section">
        <h1>Campus News Feed</h1>
        <p class="subtitle">Stay updated with the latest campus announcements</p>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="loading-spinner-large"></div>
            <p class="loading-text">Loading news...</p>
        </div>
    }
    else if (newsPosts.Items.Any())
    {
        <div class="news-grid">
            @foreach (var post in newsPosts.Items)
            {
                <div class="news-card">
                    <div class="news-card-header">
                        <div class="news-date-badge">
                            <span class="news-month">@post.CreatedAt.ToString("MMM")</span>
                            <span class="news-day">@post.CreatedAt.Day</span>
                        </div>
                        <div class="news-header-content">
                            <h3>@post.Title</h3>
                            <div class="news-author">
                                <span class="author-icon">👤</span>
                                @post.AuthorName
                            </div>
                        </div>
                    </div>
                    <div class="news-content">@post.Content</div>
                    <div class="news-footer">
                        <span class="news-time">@post.CreatedAt.ToString("h:mm tt")</span>
                    </div>
                </div>
            }
        </div>

        @if (newsPosts.TotalPages > 1)
        {
            <div class="pagination">
                <button class="btn-pagination" disabled="@(newsPosts.PageNumber == 1)" 
                        @onclick="() => LoadPage(newsPosts.PageNumber - 1)">
                    <span>←</span> Previous
                </button>
                <div class="pagination-info">
                    <span class="page-numbers">
                        Page <strong>@newsPosts.PageNumber</strong> of <strong>@newsPosts.TotalPages</strong>
                    </span>
                </div>
                <button class="btn-pagination" disabled="@(newsPosts.PageNumber >= newsPosts.TotalPages)" 
                        @onclick="() => LoadPage(newsPosts.PageNumber + 1)">
                    Next <span>→</span>
                </button>
            </div>
        }
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">📰</div>
            <h3>No news posts available</h3>
            <p>Check back later for the latest campus updates!</p>
        </div>
    }
</div>

@code {
    private PagedResponse<NewsPostDto> newsPosts = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadNews();
    }

    private async Task LoadNews(int pageNumber = 1)
    {
        isLoading = true;
        try
        {
            newsPosts = await ApiService.GetNewsAsync(pageNumber, 10);
        }
        catch
        {
            newsPosts = new PagedResponse<NewsPostDto>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadPage(int pageNumber)
    {
        await LoadNews(pageNumber);
    }
}

<style>
    .news-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: var(--spacing-xl);
    }

    .header-section {
        margin-bottom: var(--spacing-2xl);
        text-align: center;
    }

    .header-section h1 {
        font-size: var(--font-size-4xl);
        background: linear-gradient(135deg, var(--primary-gradient-start) 0%, var(--primary-gradient-end) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: var(--spacing-sm);
        font-weight: 800;
        letter-spacing: -0.02em;
    }

    .subtitle {
        color: rgba(255, 255, 255, 0.9);
        font-size: var(--font-size-lg);
        font-weight: 400;
    }

    .news-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
        gap: var(--spacing-xl);
        margin-bottom: var(--spacing-2xl);
    }

    .news-card {
        background: var(--bg-glass);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-radius: var(--radius-xl);
        padding: var(--spacing-xl);
        box-shadow: var(--shadow-md);
        transition: all var(--transition-base);
        border: 1px solid rgba(255, 255, 255, 0.2);
        display: flex;
        flex-direction: column;
        position: relative;
        overflow: hidden;
    }

    .news-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--primary-gradient-start) 0%, var(--primary-gradient-end) 100%);
        transform: scaleX(0);
        transition: transform var(--transition-base);
    }

    .news-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-lg);
    }

    .news-card:hover::before {
        transform: scaleX(1);
    }

    .news-card-header {
        display: flex;
        gap: var(--spacing-md);
        margin-bottom: var(--spacing-md);
    }

    .news-date-badge {
        background: linear-gradient(135deg, var(--primary-gradient-start) 0%, var(--primary-gradient-end) 100%);
        color: white;
        border-radius: var(--radius-lg);
        padding: var(--spacing-sm) var(--spacing-md);
        text-align: center;
        min-width: 70px;
        height: fit-content;
        box-shadow: var(--shadow-sm);
    }

    .news-month {
        display: block;
        font-size: var(--font-size-xs);
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        opacity: 0.9;
    }

    .news-day {
        display: block;
        font-size: var(--font-size-2xl);
        font-weight: 800;
        line-height: 1;
    }

    .news-header-content {
        flex: 1;
    }

    .news-header-content h3 {
        margin: 0 0 var(--spacing-sm) 0;
        color: var(--text-primary);
        font-size: var(--font-size-xl);
        font-weight: 700;
        line-height: 1.3;
    }

    .news-author {
        color: var(--text-secondary);
        font-size: var(--font-size-sm);
        display: flex;
        align-items: center;
        gap: var(--spacing-xs);
    }

    .author-icon {
        font-size: var(--font-size-base);
    }

    .news-content {
        color: var(--text-primary);
        line-height: 1.7;
        font-size: var(--font-size-base);
        margin-bottom: var(--spacing-md);
        flex: 1;
    }

    .news-footer {
        display: flex;
        justify-content: flex-end;
        padding-top: var(--spacing-md);
        border-top: 1px solid rgba(0, 0, 0, 0.05);
    }

    .news-time {
        color: var(--text-light);
        font-size: var(--font-size-sm);
    }

    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: var(--spacing-lg);
        margin-top: var(--spacing-2xl);
        flex-wrap: wrap;
    }

    .pagination-info {
        display: flex;
        align-items: center;
    }

    .page-numbers {
        color: rgba(255, 255, 255, 0.9);
        font-size: var(--font-size-base);
    }

    .page-numbers strong {
        color: white;
        font-weight: 700;
    }

    .btn-pagination {
        padding: var(--spacing-sm) var(--spacing-lg);
        background: var(--bg-glass);
        backdrop-filter: blur(10px);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: var(--radius-md);
        cursor: pointer;
        font-weight: 600;
        transition: all var(--transition-base);
        display: flex;
        align-items: center;
        gap: var(--spacing-xs);
    }

    .btn-pagination:hover:not(:disabled) {
        background: rgba(255, 255, 255, 0.2);
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
    }

    .btn-pagination:disabled {
        opacity: 0.4;
        cursor: not-allowed;
        transform: none;
    }

    .loading-container {
        text-align: center;
        padding: var(--spacing-2xl);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--spacing-md);
    }

    .loading-spinner-large {
        width: 60px;
        height: 60px;
        border: 4px solid rgba(255, 255, 255, 0.2);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }

    .loading-text {
        color: rgba(255, 255, 255, 0.9);
        font-size: var(--font-size-lg);
        font-weight: 500;
    }

    .empty-state {
        text-align: center;
        padding: var(--spacing-2xl);
        color: rgba(255, 255, 255, 0.9);
    }

    .empty-icon {
        font-size: 4rem;
        margin-bottom: var(--spacing-md);
        opacity: 0.8;
    }

    .empty-state h3 {
        color: white;
        font-size: var(--font-size-2xl);
        margin-bottom: var(--spacing-sm);
        font-weight: 700;
    }

    .empty-state p {
        color: rgba(255, 255, 255, 0.8);
        font-size: var(--font-size-base);
    }

    @media (max-width: 768px) {
        .news-grid {
            grid-template-columns: 1fr;
            gap: var(--spacing-lg);
        }

        .news-container {
            padding: var(--spacing-md);
        }

        .header-section h1 {
            font-size: var(--font-size-3xl);
        }

        .pagination {
            flex-direction: column;
            gap: var(--spacing-md);
        }
    }
</style>
